#include <stdio.h>

int main() {
    float altura, peso, pesoIdeal;
    int sexo;

    printf("OLÁ, BOM DIA!");

    // Seleção do sexo
    printf("\nQual o seu sexo?\n1: Mulher: \n2: Homem: ");
    scanf("%d", &sexo);

    // Validação do sexo
    if (sexo != 1 && sexo != 2) {
        printf("Opção inválida! Encerrando o programa.\n");
        return 1;
    }

    printf("Digite o seu peso (kg): ");
    scanf("%f", &peso);

    printf("Digite a sua altura em metros: ");
    scanf("%f", &altura);

    // Cálculo do peso ideal
    if (sexo == 1) {
        pesoIdeal = (62.1 * altura) - 44.7;
        printf("Sexo: Mulher\n");
    } else {
        pesoIdeal = (72.7 * altura) - 58;
        printf("Sexo: Homem\n");
    }

    printf("Seu peso ideal é: %.2f kg\n", pesoIdeal);

   

    return 0;
}
